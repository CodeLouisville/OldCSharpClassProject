@model HogWarsh1.Models.Student
@{
    ViewBag.Title = "Enroll";
}

<p>To Enroll your student, we need some information:</p>

@using (Html.BeginForm("enroll", "student"))
{
    <h2>This bit is hand-written: </h2>
    <dl>
        <dt>@Html.LabelFor(x => x.Name)</dt>
        <dd>@Html.EditorFor(x => x.Name)</dd>

        <dt>@Html.LabelFor(x => x.Species)</dt>
        <dd>@Html.EditorFor(x => x.Species)</dd>
    </dl>
    <h2>This bit is auto-generated:</h2>
    <p>
        @Html.EditorFor(x => x)
    </p>
    <input type="submit" value="Enroll!" />
}